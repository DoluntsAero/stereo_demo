<launch>
    <group ns="stereo">

        <node pkg="libuvc_camera" type="camera_node" name="left">
            <param name="vendor" value="0x046d"/> <!-- Parameters used to find the camera -->
            <param name="product" value="0x0825"/>
            <param name="serial" value="0"/>
            <param name="index" value="1"/> <!-- If the above parameters aren't unique, choose the second match: -->
            
            <param name="width" value="640"/> <!-- Image size and type -->
            <param name="height" value="480"/>
            <param name="video_mode" value="mjpeg"/> <!-- choose whichever uncompressed format the camera supports: yuyv/nv12/mjpeg -->
            <param name="frame_rate" value="30"/>
            
            <param name="frame_id" value="camera_link"/>
            
            <param name="auto_exposure" value="1"/> <!-- use aperture_priority auto exposure -->
            <param name="auto_white_balance" value="true"/>
            <param name="brightness" value="100"/>
        </node>
        
        <node pkg="libuvc_camera" type="camera_node" name="right">
            <param name="vendor" value="0x046d"/> <!-- Parameters used to find the camera -->
            <param name="product" value="0x0825"/>
            <param name="serial" value="0"/>
            <param name="index" value="0"/> <!-- If the above parameters aren't unique, choose the first match: -->
            
            <param name="width" value="640"/> <!-- Image size and type -->
            <param name="height" value="480"/>
            <param name="video_mode" value="mjpeg"/> <!-- Choose whichever uncompressed format the camera supports: yuyv/nv12/mjpeg -->
            <param name="frame_rate" value="30"/>
            <param name="frame_id" value="camera_link"/>
            
            <param name="auto_exposure" value="1"/> <!-- use aperture_priority auto exposure -->
            <param name="auto_white_balance" value="true"/>
            <param name="brightness" value="100"/>
        </node>

  </group>
</launch>